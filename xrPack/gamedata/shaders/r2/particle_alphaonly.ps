#include "common.h"

struct 	v2p
{
 	float2 	tc0	: 	TEXCOORD0;	// base
	half4	c	:	COLOR0;		// diffuse
};


//////////////////////////////////////////////////////////////////////////////////////////
// Pixel
half4 	main	( v2p I )	: COLOR
{
	half4	c 	= tex2D	(s_base,I.tc0);
	c = pow(c, 2.2f);
	
	c *= I.c;
	
	return	c.a;
}
